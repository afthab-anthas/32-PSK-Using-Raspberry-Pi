[Unit]
Description=My DSP coursework to display 32PHASE SHIFT KEYING
After=network.target

[Service]
# The user monitoring the system. usually 'root' or your username.
User=admin
WorkingDirectory=/home/admin/repos/32-PSK-Using-Raspberry-Pi/

# The command to run
ExecStart=/usr/bin/python3 /home/admin/repos/32-PSK-Using-Raspberry-Pi/app.py

# If it crashes, restart it automatically
Restart=always
RestartSec=3

[Install]
# This makes it start when the computer boots up
WantedBy=multi-user.target
